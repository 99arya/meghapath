<% include ./partials/header %>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.17.0/jquery.validate.js"></script>


<div class="container content">
    <div class="row">
        <div style="width: 70%; margin: 25px auto">


     
    <h1 style="text-align: center; " >Leave your valuable feedback</h1>
<br><br>
    
    <form action = "/feedback/<%= bill.id %>" method = "POST"  id='theform' >
         <div class="form-group">
           
        
        <div class="form-group">
             <p for="custName">Name</p>
        <input class="form-control" type = "text" name = "custName" placeholder = "Name">
        
        </div>
         <div class="form-group">
             <p for="custPhone">Phone</p>
        <input class="form-control" type = "text" name = "custPhone" placeholder = "Phone">
        </div>
        <div class="form-group">
        <input class="form-control" type = "hidden" name = "orderNumber"  value="<%= bill.bn %>">
        </div>
         <div class="form-group">
             <p for="comment">Comment</p>
        <input class="form-control" type = "text" name = "comment" placeholder = "Comment">
        </div>
         <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" id='btnsubmit' >SUBMIT</button>
        </div>
    </form>

</div></div></div>


<script>
    
    
     $('#theform').validate({ // initialize the plugin
        rules: {
            custName:{
              required:true,
            
            },
            orderNumber:{
              required:true
            },
            comment:{
              required:true
            },
            custPhone: {
                required: true,
                minlength: 10
            }
        },
        messages:{
            custName: "Please specify your name",
            
            custPhone: "Please enter at least 10 digits",
            
            comment: "The reason why you are contacting us",

        }
    });
    
    
    
    
$('#btnsubmit').on('click',function()
  {
          if($('#theform').invalid){ 

    $(this).val('Please wait ...')
      .attr('disabled','disabled');
    $('#theform').submit();
  }});
</script>

<style>
  .error {
    color:#c50707a6;
}
.form-control error{
      border: 1px solid red;

}
</style>
<% include ./partials/footer %>