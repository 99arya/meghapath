<% include ./partials/header %>

<div class="container content">
    <div class="row">
        <div style="width: 70%; margin: 25px auto">


     

    

        
        

    
    
    
    
    <h1 style="text-align: center; " >Leave your valuable feedback</h1>
<br><br>
    
    <form action = "/feedback/<%= bill.id %>" method = "POST"  id='theform' >
         <div class="form-group">
           
        
        <div class="form-group">
             <p for="custName">Name</p>
        <input class="form-control" type = "text" name = "custName" placeholder = "Name">
        
        </div>
         <div class="form-group">
             <p for="custPhone">Phone</p>
        <input class="form-control" type = "text" name = "custPhone" placeholder = "Phone">
        </div>
        <div class="form-group">
        <input class="form-control" type = "hidden" name = "orderNumber"  value="<%= bill.bn %>">
        </div>
         <div class="form-group">
             <p for="comment">Comment</p>
        <input class="form-control" type = "text" name = "comment" placeholder = "Comment">
        </div>
         <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" id='btnsubmit' >SUBMIT</button>
        </div>
    </form>

</div></div></div>


<script>
    
$('#btnsubmit').on('click',function()
  {
    $(this).val('Please wait ...')
      .attr('disabled','disabled');
    $('#theform').submit();
  });
</script>

