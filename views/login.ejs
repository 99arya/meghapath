<% include ./partials/header %>

<div class="container content">
    <div class="row">
        <div style="width: 70%; margin: 25px auto">


       <% if(error && error.length > 0){ %>
       
        
            <div class="alert alert-danger" role="alert">
              <%=error%>
            </div>
        
        <%    } %>


    
        
       <% if(success && success.length > 0){ %>
       <script>alertify.success(success);</script>
    
        <div class="alert alert-success" role="alert">
          <%=success%>
        </div>
    
       <% } %>
        
        
        

    
    
    
    
    <h1 style="text-align: center; " >Get In</h1>
<br><br>
    
    <form action = "/login" method = "POST" id ="theform">
         <div class="form-group">
        <input class="form-control" type = "text" name = "username" placeholder = "E-Mail">
        </div>
         <div class="form-group">
        <input class="form-control" type = "password" name = "password" placeholder = "Password">
        </div>
         <div class="form-group">
        <button class="btn btn-lg btn-primary btn-block" id="btnsubmit" >LOG IN</button>
        </div>
    </form>

</div></div></div>

<script>
 $('#theform').validate({ // initialize the plugin
        rules: {
            username:{
              required:true,
            
            },
            password:{
              required:true
              
            }
        },
        messages:{
            username: "Please specify the user name.",
            
            password: "Please enter the password.",

        }
    });
    
    
  
     
      $('#btnsubmit').click(function(){

      $(this).prop('disabled', true);
    $('#theform').submit();
    
     })
</script>

<% include ./partials/footer %>